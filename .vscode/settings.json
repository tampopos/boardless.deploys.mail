{
  "files.exclude": {
    "**/.data": true,
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "node_modules": true,
    "**/bin": true,
    "**/obj": true
  },
  "editor.formatOnPaste": false,
  "editor.formatOnSave": true,
  "editor.detectIndentation": false,
  "editor.tabCompletion": "on",
  "prettier.semi": true,
  "prettier.tabWidth": 2,
  "prettier.singleQuote": true,
  "cSpell.words": [
    "boardless",
    "sendgrid",
    "tampopos"
],
  "cSpell.ignoreRegExpList": ["/.*ãƒ¼/"],
  "cSpell.ignorePaths": [
    "**/package-lock.json",
    "**/node_modules/**",
    "**/vscode-extension/**",
    "**/.git/**",
    "**/appsettings.*.json",
    ".vscode"
  ]
}
